<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- School Degree Tree View -->
    <record id="school_degree_tree_view" model="ir.ui.view">
        <field name="name">Degree</field>
        <field name="model">school.degree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="subject_name" />
                <field name="teacher" />
                <field name="student" />
                <field name="his_degree" />
                <field name="f_s" string="Fail/Pass" />
            </tree>
        </field>
    </record>

    <!-- School Degree Form View -->
    <record id="school_degree_view_form" model="ir.ui.view">
        <field name="name">Degree</field>
        <field name="model">school.degree</field>
        <field name="arch" type="xml">
            <form string="Degree">
                <sheet>
                    <group>
                        <field name="subject_name" />
                        <field name="teacher" />
                        <field name="student" />
                        <field name="total_degre" string= "Totla Degree" />
                        <field name="pass_degree" string= "Pass Degree" />
                        <field name="his_degree" />
                        <field name="f_s" string="Fail/Pass" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
